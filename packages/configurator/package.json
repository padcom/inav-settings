{
  "name": "@padcom/inav-configurator",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run dev",
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test": "npm run test:unit",
    "test:watch": "npm run test:unit:watch",
    "test:unit": "vitest run --environment jsdom --root src/ --coverage",
    "test:unit:watch": "vitest watch --environment jsdom --root src/ --coverage",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint -c .eslintrc.cjs --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@padcom/eslint-config-vue": "^0.1.1",
    "@rushstack/eslint-patch": "^1.2.0",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.12",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitest/coverage-istanbul": "^0.28.4",
    "@vue/test-utils": "^2.2.6",
    "@vue/tsconfig": "^0.1.3",
    "@vueuse/components": "^9.12.0",
    "@vueuse/core": "^9.12.0",
    "autoprefixer": "^10.4.13",
    "cssnano": "^5.1.14",
    "eslint": "^8.22.0",
    "firebase": "^9.17.1",
    "jsdom": "^20.0.3",
    "npm-run-all": "^4.1.5",
    "pinia": "^2.0.28",
    "postcss": "^8.4.21",
    "postcss-mixins": "^9.0.4",
    "tailwindcss": "^3.2.4",
    "typescript": "~4.7.4",
    "vite": "^4.1.1",
    "vitest": "^0.28.4",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6",
    "vue-tsc": "^1.0.12",
    "vuefire": "^3.0.1"
  }
}
